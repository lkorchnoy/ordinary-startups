<h1>Create a New Category</h1>
<%= form_for @category do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br />
<%= f.submit %>

<% end %>

<% if @category && @category.errors.any? %>
    <% @category.errors.full_messages.each do |m| %>
        <p style="color: red;"><%= m %></p>
    <% end %>
<% end %>