<h1>Sign Up</h1>

<%=form_for @user do |f| %>
<label> Name: </label>
<%= f.text_field :name %><br>
<label> Email: </label>
<%= f.text_field :email %><br>
<label> Password: </label>
<%= f.password_field :password %><br>
<label> Password Confirmation: </label>
<%= f.password_field :password_confirmation %><br>

<%= f.submit 'Submit'%>
<% end %>