<!DOCTYPE html>
<html>
  <head>
    <title>OrdinaryStartups</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header class="navbar navbar-inverse">
  <div class="navbar-class">
  <div class="container">
  
  <% if current_user %>
  <ul class="nav navbar-nav">
  <li class="active"><a href="/">Home</a></li>
  <li><%= link_to "Sign Up", controller: "users", action: "new" %></li>
  <li><%= link_to "Startups", startups_path %></li>
  <li><%= link_to "New Startups", new_startup_path %></li>
  <li><%= link_to "Startups by Categories", categories_path %></li>
  <li><%= link_to "Create a New Category", new_category_path %></li>
  <li><%= link_to "Log Out", logout_path, method: :post %>
  <% end %>
    </ul>
    
   </div>
   </div>
   </header>    
    <%= yield %>
  </body>
</html>
